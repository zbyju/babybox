{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["unused-imports", "simple-import-sort"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "unused-imports/no-unused-imports": "warn",
    "simple-import-sort/imports": "error"
  }
}
